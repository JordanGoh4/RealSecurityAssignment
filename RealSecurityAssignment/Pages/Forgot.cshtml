@page
@model RealSecurityAssignment.Pages.ForgotModel
@{
}
<div class="container mt-5">

	<div class="row justify-content-center align-items-center">

		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Change Password </h1>
			<div asp-validation-summary="All"></div>

			<form method="post">
				
				<div class="mb-3">
					<label class="form-label" asp-for="User.Email">Email Address</label>
					<input type="Text" asp-for="User.Email" class="form-control" />
					<span asp-validaton-for="User.Email" class="text-danger"></span>
				</div>


				<div class="mb-3">
					<button type="submit" class="btn btn-primary" >Change</button>
				</div>
			</form>
            
		</div>
	</div>
</div>